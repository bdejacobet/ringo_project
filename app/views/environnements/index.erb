<% @environnments.each do |environnment| %>
<div class="inner">
  <table class="table">
	<tr>
	  <th class="first"><%= environnment.name %></th>
	  <th><%= environnment.description %></th>
	  <th class="last"><%= button_to 'voir', url(:environnments, :show, :id => environnment.id), :method => :get, :class => :button_to %></th>
	</tr>
	<% environnement.branches.each do |branch| %>
		<tr>
		  <td class="first"><%= branch.name %></td>
		  <td class="first"><%= branch.description %></td>
		  <td class="last"><%= button_to 'voir', url(:branches, :show, :id => branch.id), :method => :get, :class => :button_to %></td>
		</tr>
	<% end %>
  </table>
</div>
<% end %>
