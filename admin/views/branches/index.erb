<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to pat(:list), url(:branches, :index) %></li>
      <li><%= link_to pat(:new), url(:branches, :new) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:all) %> <% mt(:branches) %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"><%= mat(:branch, :id) %></th>
          <th><%= mat(:branch, :name) %></th>
          <th><%= mat(:branch, :description) %></th>
          <th><%= mat(:branch, :environnement_id) %></th>
          <th><%= mat(:environnement, :projet_id) %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @branches.each do |branch| %>
        <tr>
          <td class="first"><%= branch.id %></td>
          <td><%= branch.name %></td>
          <td><%= branch.description %></td>
          <td><%= Environnement.find(branch.environnement_id).name %></td>
          <td><%= Projet.find(Environnement.find(branch.environnement_id).projet_id).name %></td>
          <td class="last">
            <%= button_to pat(:edit), url(:branches, :edit, :id => branch.id), :method => :get, :class => :button_to %> |
            <%= button_to pat(:delete), url(:branches, :destroy, :id => branch.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')" %>
          </td>
        </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions"></div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>
