<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to pat(:list), url(:environnements, :index) %></li>
      <li><%= link_to pat(:new), url(:environnements, :new) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:all) %> <% mt(:environnements) %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"><%= mat(:environnement, :id) %></th>
          <th><%= mat(:environnement, :name) %></th>
          <th><%= mat(:environnement, :description) %></th>
          <th><%= mat(:environnement, :projet_id) %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @environnements.each do |environnement| %>
        <tr>
          <td class="first"><%= environnement.id %></td>
          <td><%= environnement.name %></td>
          <td><%= environnement.description %></td>
          <td><%= Projet.find(environnement.projet_id).name %></td>
          <td class="last">
            <%= button_to pat(:edit), url(:environnements, :edit, :id => environnement.id), :method => :get, :class => :button_to %>
            <%= button_to pat(:delete), url(:environnements, :destroy, :id => environnement.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')" %>
		  </td>
        </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions"></div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>
